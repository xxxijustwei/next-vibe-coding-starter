{
  "name": "next-vibe-coding-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "npm run format && npm run lint && next build",
    "start": "next start",
    "format": "biome format --write --no-errors-on-unmatched",
    "lint": "biome lint --write --no-errors-on-unmatched",
    "prepare": "husky"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-use-callback-ref": "^1.1.1",
    "@tanstack/react-query": "^5.90.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.542.0",
    "motion": "^12.23.12",
    "next": "15.5.2",
    "next-intl": "^4.3.6",
    "next-themes": "^0.4.6",
    "nuqs": "^2.7.0",
    "pino": "^9.9.4",
    "pino-pretty": "^13.1.1",
    "react": "^19",
    "react-dom": "^19",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.2.8",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,jsonc}": [
      "biome check --fix --unsafe ./src",
      "biome check --files-ignore-unknown=true ./src",
      "biome check --write --no-errors-on-unmatched ./src",
      "biome check --write --organize-imports-enabled=false --no-errors-on-unmatched ./src",
      "biome check --write --unsafe --no-errors-on-unmatched ./src",
      "biome format --write --no-errors-on-unmatched ./src",
      "biome lint --write --no-errors-on-unmatched ./src"
    ]
  }
}
